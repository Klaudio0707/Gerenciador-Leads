datasource db {
  provider = "postgresql"
  url      = env("NEXT_URL_DB")
}

generator client {
  provider = "prisma-client-js"
}

// Enum para o status do lead
enum LeadStatus {
  NOVO
  EM_CONTATO
  CONVERTIDO
}

// Modelo do Lead
model Lead {
  id        Int      @id @default(autoincrement())
  nome      String
  email     String   
  telefone  String
  createdAt DateTime @default(now())
  status    LeadStatus @default(NOVO)

  @@index([nome])
  @@index([email])
  @@index([telefone])
  @@index([status])
  @@index([createdAt])
}
